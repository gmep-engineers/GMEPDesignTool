                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    </ScrollViewer>
                </Grid>
                <GridSplitter Grid.Column="5" Margin="0 101 0 30" HorizontalAlignment="Stretch" />
                <StackPanel MinWidth="100" Orientation="Vertical" Grid.Column="6" Margin="0 100 20 0">
                    <ListBox ItemsSource="{Binding RightComponents}" 
                       dd:DragDrop.IsDragSource="True"
                       dd:DragDrop.IsDropTarget="True"
                       dd:DragDrop.DropHandler="{Binding}" HorizontalContentAlignment="Stretch" VerticalAlignment="Top">    
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Margin="0" Background="{Binding ColorCode}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Height" Value="80"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Pole}" Value="1">
                                                    <Setter Property="Height" Value="24"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Pole}" Value="2">
                                                    <Setter Property="Height" Value="53"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        <GridSplitter HorizontalAlignment="Stretch" Grid.Row="3"/>
        
        <ScrollViewer Grid.Row="4">
            
            <Grid MinWidth="1450" Margin=" 0 0 0 0" Background="LightSlateGray">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1.5*" />
                </Grid.ColumnDefinitions>
                <StackPanel VerticalAlignment="Top" Grid.Column="0"  Margin="20 20 0 0">
                    <StackPanel.Effect>
                        <DropShadowEffect ShadowDepth="-5" BlurRadius="10" Color="Black" Opacity="0.7"/>
                    </StackPanel.Effect>
                    <TextBox Grid.Row="0" FontSize="23" IsReadOnly="True">
                        <TextBox.Text>
                            <MultiBinding StringFormat="TOTAL CONNECTED VA  =  {0}">
                                <Binding Path="Va"/>
                            </MultiBinding>
                        </TextBox.Text>
                    </TextBox>
                    <TextBox Grid.Row="1" FontSize="23" IsReadOnly="True">
                        <TextBox.Text>
                            <MultiBinding StringFormat="LCL @ 125%  {0}  =  {1}">
                                <Binding Path="Lcl" Converter="{StaticResource ValueRounder}"/>
                                <Binding Path="Lcl" Converter="{StaticResource LclConverter}"/>
                            </MultiBinding>
                        </TextBox.Text>
                    </TextBox>
                    <TextBox Grid.Row="2" FontSize="23" IsReadOnly="True">
                        <TextBox.Text>
                            <MultiBinding StringFormat="LML @ 125%  {0} =  {1}">
                                <Binding Path="Lml" Converter="{StaticResource ValueRounder}"/>
                                <Binding Path="Lml" Converter="{StaticResource LclConverter}"/>
                            </MultiBinding>
                        </TextBox.Text>
                    </TextBox>
                    <TextBox Grid.Row="3" FontSize="23" IsReadOnly="True" >
                        <TextBox.Text>
                            <MultiBinding StringFormat="PANEL LOAD  =   {0} KVA">
                                <Binding Path="Kva"/>
                            </MultiBinding>
                        </TextBox.Text>
                    </TextBox>
                    <TextBox Grid.Row="4" FontSize="23" IsReadOnly="True"  >
                        <TextBox.Text>
                            <MultiBinding StringFormat="FEDER AMPS  =   {0} A">
                                <Binding Path="Amp"/>
                            </MultiBinding>
                        </TextBox.Text>
                    </TextBox>
                </StackPanel>
                <StackPanel Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="20 20 20 0">
                    <StackPanel.Effect>
                        <DropShadowEffect ShadowDepth="-5" BlurRadius="10" Color="Black" Opacity="0.7"/>
                    </StackPanel.Effect>
                    <TextBox FontSize="23"  Text="NOTES: " IsReadOnly="True"/>
                    <DataGrid ItemsSource="{Binding Notes}" Height="130" CanUserAddRows="True" AutoGenerateColumns="False" HeadersVisibility="None" RowHeight="30">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="40">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Ellipse Width="25" Height="25" StrokeThickness="1" Stroke="Black" Fill="White"/>
                                            <TextBox Foreground="Black" HorizontalAlignment="Center" Text="{Binding Number, UpdateSourceTrigger=LostFocus}" VerticalAlignment="Center" BorderThickness="0" MaxLength="4" TextAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Note" Binding="{Binding Description}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
