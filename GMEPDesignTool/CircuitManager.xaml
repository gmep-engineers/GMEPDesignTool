<Window x:Class="GMEPDesignTool.CircuitManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMEPDesignTool"
        mc:Ignorable="d"
        xmlns:dd="urn:gong-wpf-dragdrop"
        Title="CircuitManager" Height="450" Width="800">
    <Window.Resources>
        <local:PoleToVisibilityConverter x:Key="PoleToVisibilityConverter"/>
        <local:BindingProxy x:Key="PoleBindingProxy" Data="{Binding Pole}"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="600"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="30" FontWeight="Bold">
                <TextBlock.Text>
                    <MultiBinding StringFormat="Panel {0} ({1}P)">
                        <Binding Path="Name"/>
                        <Binding Path="Pole"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </Grid>
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="2" Margin="20 0 20 30">
            <ScrollViewer>
                <Grid Margin=" 0 20 0 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox Grid.Column="0" Margin="20 0 0 0"  ItemsSource="{Binding LeftComponents}" 
                 dd:DragDrop.IsDragSource="True"
                 dd:DragDrop.IsDropTarget="True"
                 dd:DragDrop.DropHandler="{Binding}" HorizontalContentAlignment="Stretch" VerticalAlignment="Top">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Background="{Binding ColorCode}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Height" Value="160"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Pole}" Value="1">
                                                    <Setter Property="Height" Value="50"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Pole}" Value="2">
                                                    <Setter Property="Height" Value="110"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <DataGrid HeadersVisibility="None" Margin="20 0 20 0" Grid.Column="1" ItemsSource="{Binding LeftCircuits}" AutoGenerateColumns="False" RowHeight="56" IsEnabled="False" AlternationCount="{Binding Pole}">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="20">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Number}" Background="LightBlue"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="*" Header="Phase A">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Va}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=(ItemsControl.AlternationIndex)}" Value="0">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Setter Property="Background" Value="LightGray"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Va}" Value="0">
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Setter Property="Background" Value="White"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="*" Header="Phase B">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Va}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=(ItemsControl.AlternationIndex)}" Value="1">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Setter Property="Background" Value="LightGray"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Va}" Value="0">
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Setter Property="Background" Value="White"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="*" Header="Phase C" Visibility="{Binding Data, Source={StaticResource PoleBindingProxy}, Converter={StaticResource PoleToVisibilityConverter}}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Va}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=(ItemsControl.AlternationIndex)}" Value="2">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Setter Property="Background" Value="LightGray"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Va}" Value="0">
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Setter Property="Background" Value="White"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn  Binding="{Binding BreakerSize}" Width=".5*" Header="Breaker Size"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <DataGrid HeadersVisibility="None" Margin="0 0 20 0" Grid.Column="2" ItemsSource="{Binding RightCircuits}" AutoGenerateColumns="False" RowHeight="56" IsEnabled="False" AlternationCount="{Binding Pole}">
                        <DataGrid.Columns>
                            <DataGridTextColumn  Binding="{Binding BreakerSize}" Width=".5*" Header="Breaker Size"/>
                            <DataGridTemplateColumn Width="*" Header="Phase A">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Va}" >
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=(ItemsControl.AlternationIndex)}" Value="0">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Setter Property="Background" Value="LightGray"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Va}" Value="0">
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Setter Property="Background" Value="White"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="*" Header="Phase B">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Va}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=(ItemsControl.AlternationIndex)}" Value="1">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Setter Property="Background" Value="LightGray"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Va}" Value="0">
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Setter Property="Background" Value="White"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="*" Visibility="{Binding Data, Source={StaticResource PoleBindingProxy}, Converter={StaticResource PoleToVisibilityConverter}}" Header="Phase C">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Va}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=(ItemsControl.AlternationIndex)}" Value="2">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Setter Property="Background" Value="LightGray"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Va}" Value="0">
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Setter Property="Background" Value="White"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="20">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Number}" Background="LightBlue"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <ListBox Grid.Column="3" Margin="20 0 20 0"  ItemsSource="{Binding RightComponents}" 
       dd:DragDrop.IsDragSource="True"
       dd:DragDrop.IsDropTarget="True"
       dd:DragDrop.DropHandler="{Binding}" HorizontalContentAlignment="Stretch" VerticalAlignment="Top">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Margin="0" Background="{Binding ColorCode}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Height" Value="160"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Pole}" Value="1">
                                                    <Setter Property="Height" Value="50"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Pole}" Value="2">
                                                    <Setter Property="Height" Value="110"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </ScrollViewer>
        </Border>
        <GridSplitter HorizontalAlignment="Stretch" Grid.Row="2"/>
        <Grid Grid.Row="3"  MinWidth="650" Margin=" 0 20 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Vertical" Height="2000" Margin="20 0 0 0" >
                <TextBox Text="Phase A" Height="50"  FontWeight="Bold" />
                <TextBox Text="{Binding PhaseAVa}" Height="50" FontWeight="Bold" />
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Vertical" >
                <TextBox Text="Phase B" FontWeight="Bold" Height="50" />
                <TextBox Text="{Binding PhaseBVa}" FontWeight="Bold" Height="50"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Vertical" Margin="0 0 30 0" Visibility="{Binding Pole, Converter={StaticResource PoleToVisibilityConverter}}">
                <TextBox Text="Phase C" FontWeight="Bold" Height="50"/>
                <TextBox Text="{Binding PhaseCVa}" FontWeight="Bold" Height="50" />
            </StackPanel>
            <StackPanel Grid.Column="3">
                <TextBox Text="Total Kva" FontWeight="Bold" Height="50"/>
                <TextBox Text="{Binding Kva}" FontWeight="Bold" Height="50" />
            </StackPanel>
            <StackPanel Grid.Column="4" Orientation="Vertical" Margin="0 0 20 0">
                <TextBox Text="Total Feeder Amp" FontWeight="Bold" Height="50"/>
                <TextBox Text="{Binding Amp}" FontWeight="Bold" Height="50" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
