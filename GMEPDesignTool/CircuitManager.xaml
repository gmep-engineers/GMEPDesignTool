<Window x:Class="GMEPDesignTool.CircuitManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMEPDesignTool"
        mc:Ignorable="d"
        xmlns:dd="urn:gong-wpf-dragdrop"
        Title="CircuitManager" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="700"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Panel #" FontSize="30" FontWeight="Bold"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ListBox Grid.Column="0" Margin="20 0 0 0"  ItemsSource="{Binding Equipment}" 
                 dd:DragDrop.IsDragSource="True"
                 dd:DragDrop.IsDropTarget="True"
                 dd:DragDrop.DropHandler="{Binding}" HorizontalContentAlignment="Stretch" VerticalAlignment="Top">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Margin="0" Background="LightSlateGray">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Height" Value="150"/>
                                        <Style.Triggers>
                                        <DataTrigger Binding="{Binding Is3Ph}" Value="False">
                                            <Setter Property="Height" Value="50"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Description}" Margin="5"/>
                                    <TextBlock Text="{Binding EquipNo}" Margin="5"/>
                                    <TextBlock Text="{Binding Voltage}" Margin="5"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            <DataGrid HeadersVisibility="None" Margin="20 0 20 0" Grid.Column="1"></DataGrid>
            <ListBox Grid.Column="2" Background="AliceBlue" ItemsSource="{Binding Equipment}" Margin="0 0 20 0" VerticalAlignment="Top"/>
        </Grid>
        <Grid  Background="LightGray" Grid.Row="2">
            
        </Grid>
    </Grid>
</Window>
