<Window x:Class="GMEPDesignTool.CircuitManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMEPDesignTool"
        mc:Ignorable="d"
        xmlns:dd="urn:gong-wpf-dragdrop"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="CircuitManager" Height="450" Width="800">
    <Window.Resources>
        <local:PoleToVisibilityConverter x:Key="PoleToVisibilityConverter"/>
        <local:LclConverter x:Key="LclConverter"/>
        <local:ValueRounder x:Key="ValueRounder"/>
        <local:BindingProxy x:Key="PoleBindingProxy" Data="{Binding Pole}"/>
        <local:LeftMarginConverter x:Key="LeftMarginConverter"/>
        <local:RightMarginConverter x:Key="RightMarginConverter"/>
        <local:LengthToHeightConverter x:Key="LengthToHeightConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0">
            <ListBox ItemsSource="{Binding ComponentsCollection}" 
             dd:DragDrop.IsDragSource="True"
             dd:DragDrop.IsDropTarget="True"
             dd:DragDrop.DropHandler="{Binding}" HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch" >
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black" Width="100" BorderThickness="2" CornerRadius="5" Background="{Binding ColorCode}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Height" Value="80"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Pole}" Value="1">
                                            <Setter Property="Height" Value="24"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Pole}" Value="2">
                                            <Setter Property="Height" Value="53"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch"/>
        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto">
            <Grid Margin="0 20 0 20" MinWidth="1080"  MaxWidth="1950" Width="{Binding Path=ActualWidth, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollContentPresenter}}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".7*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width=".3*"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width=".3*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width=".7*"/>
                </Grid.ColumnDefinitions>
                <ListBox ItemsSource="{Binding LeftComponents}" 
                     dd:DragDrop.IsDragSource="True"
                     dd:DragDrop.IsDropTarget="True"
                     dd:DragDrop.DropHandler="{Binding}" HorizontalContentAlignment="Stretch" VerticalAlignment="Top" Grid.Column="0" Margin="20 100 0 0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="2" CornerRadius="5" Background="{Binding ColorCode}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Height" Value="80"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Pole}" Value="1">
                                                <Setter Property="Height" Value="24"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Pole}" Value="2">
                                                <Setter Property="Height" Value="53"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <GridSplitter Grid.Column="1" MinWidth="100" HorizontalAlignment="Stretch" Margin="0 101 0 30"/>
                <Grid Grid.Column="2" Margin="0 101 0 30">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding LeftNodes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                </Grid>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Grid.Row="0" VerticalAlignment="Top" Height="{Binding Length, Converter={StaticResource LengthToHeightConverter}}">
                                    <Grid.Margin>
                                        <MultiBinding Converter="{StaticResource LeftMarginConverter}">
                                            <Binding Path="CircuitNo"/>
                                            <Binding Path="Stack"/>
                                        </MultiBinding>
                                    </Grid.Margin>
                                    <Grid HorizontalAlignment="Right" Width="30">
                                        <Grid>
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Length}" Value="1">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                            <Border BorderBrush="Black" BorderThickness="1" VerticalAlignment="Stretch" HorizontalAlignment="Center" Width="1"/>
                                            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="1"/>
                                            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="1"/>
                                        </Grid>
                                        <Grid>
                                            <Grid.ToolTip>
                                                <ToolTip Content="{Binding Description}"/>
                                            </Grid.ToolTip>
                                            <Ellipse Fill="White" Stroke="Black" StrokeThickness="1" Width="25" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Text="{Binding Number}"/>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    </ScrollViewer>
                </Grid>
                <Border Grid.Column="3" BorderBrush="Black" BorderThickness="2" Margin="0 0 0 30">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="PANEL '{0}'">
                                            <Binding Path="Name"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBox Grid.Row="0" IsReadOnly="True">
                                    <TextBox.Text>
                                        <MultiBinding StringFormat="LOCATION: {0}">
                                            <Binding Path="Location"/>
                                        </MultiBinding>
                                    </TextBox.Text>
                                </TextBox>
                                <TextBox Grid.Row="1" IsReadOnly="True">
                                    <TextBox.Text>
                                        <MultiBinding StringFormat="MAIN (AMP) {0}">
                                            <Binding Path="MainRating"/>
                                        </MultiBinding>
                                    </TextBox.Text>
                                </TextBox>
                            </Grid>
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBox Grid.Row="0" IsReadOnly="True">
                                    <TextBox.Text>
                                        <MultiBinding StringFormat="BUS RATING {0}">
                                            <Binding Path="BusRating"/>
                                        </MultiBinding>
                                    </TextBox.Text>
                                </TextBox>
                                <TextBox Grid.Row="1" IsReadOnly="True">
                                    <TextBox.Text>
                                        <MultiBinding StringFormat="FED FROM {0}'{1}'">
                                            <Binding Path="ParentType"/>
                                            <Binding Path="ParentName"/>
                                        </MultiBinding>
                                    </TextBox.Text>
                                </TextBox>
                            </Grid>
                            <Grid Grid.Column="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBox Grid.Row="0" IsReadOnly="True" >
                                    <TextBox.Text>
                                        <MultiBinding StringFormat=" {0}     {1}     {2}" >
                                            <Binding Path="Voltage"/>
                                            <Binding Path="Phases"/>
                                            <Binding Path="Wire"/>
                                        </MultiBinding>
                                    </TextBox.Text>
                                </TextBox>
                                <TextBox Grid.Row="1" IsReadOnly="True">
                                    <TextBox.Text>
                                        <MultiBinding StringFormat="MOUNTING: {0}">
                                            <Binding Path="Mounting"/>
                                        </MultiBinding>
                                    </TextBox.Text>
                                </TextBox>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1" VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="7*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="7*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition>
                                        <ColumnDefinition.Style>
                                            <Style TargetType="ColumnDefinition">
                                                <Setter Property="Width" Value="3*"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Pole}" Value="2">
                                                        <Setter Property="Width" Value="2*"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ColumnDefinition.Style>
                                    </ColumnDefinition>
                                    <ColumnDefinition Width=".4*"/>
                                    <ColumnDefinition Width=".4*"/>
                                    <ColumnDefinition Width=".4*"/>
                                    <ColumnDefinition Width=".5*"/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="DESCRIPTION" IsReadOnly="True" TextAlignment="Center" FontSize="15" Grid.Column="0"/>
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBox Grid.Row="0" TextAlignment="Center" Text="VOLT AMPS" IsReadOnly="True"></TextBox>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition>
                                                <ColumnDefinition.Style>
                                                    <Style TargetType="ColumnDefinition">
                                                        <Setter Property="Width" Value="*"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Pole}" Value="2">
                                                                <Setter Property="Width" Value="0"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ColumnDefinition.Style>
                                            </ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Text="ɸA" IsReadOnly="True" TextAlignment="Center" Grid.Column="0"/>
                                        <TextBox Text="ɸB" IsReadOnly="True" TextAlignment="Center" Grid.Column="1"/>
                                        <TextBox Text="ɸC" IsReadOnly="True" TextAlignment="Center" Grid.Column="2"/>
                                    </Grid>
                                </Grid>
                                <Border BorderBrush="Gray" BorderThickness=".5" Grid.Column="2">
                                    <StackPanel Orientation="Vertical" Grid.Column="2">
                                        <TextBlock Text="L" TextAlignment="Center"/>
                                        <TextBlock Text="T" TextAlignment="Center"/>
                                        <TextBlock Text="G" TextAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="Gray" BorderThickness=".5" Grid.Column="3">
                                    <StackPanel Orientation="Vertical" Grid.Column="2">
                                        <TextBlock Text="R" TextAlignment="Center"/>
                                        <TextBlock Text="E" TextAlignment="Center"/>
                                        <TextBlock Text="C" TextAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="Gray" BorderThickness=".5" Grid.Column="4">
                                    <StackPanel Orientation="Vertical" Grid.Column="2">
                                        <TextBlock Text="M" TextAlignment="Center"/>
                                        <TextBlock Text="I" TextAlignment="Center"/>
                                        <TextBlock Text="S" TextAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <Grid Grid.Column="5">
                                    <TextBox Text="BKR" IsReadOnly="True"/>
                                </Grid>
                                <Grid Grid.Column="6">
                                    <TextBox Text="#" IsReadOnly="True"/>
                                </Grid>
                            </Grid>
                            <Grid Grid.Column="1" VerticalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBox Grid.Row="0" TextAlignment="Center" Text="BUS" IsReadOnly="True"/>
                                <Border BorderThickness="1" BorderBrush="Gray" Grid.Row="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition>
                                                <ColumnDefinition.Style>
                                                    <Style TargetType="ColumnDefinition">
                                                        <Setter Property="Width" Value="*"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Pole}" Value="2">
                                                                <Setter Property="Width" Value="0"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ColumnDefinition.Style>
                                            </ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <TextBlock Text="ɸA" HorizontalAlignment="Center"/>
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <TextBlock  Text="ɸB" HorizontalAlignment="Center"/>
                                        </Grid>
                                        <Grid Grid.Column="2">
                                            <TextBlock  Text="ɸC" HorizontalAlignment="Center"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>
                            <Grid Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width=".5*"/>
                                    <ColumnDefinition Width=".4*"/>
                                    <ColumnDefinition Width=".4*"/>
                                    <ColumnDefinition Width=".4*"/>
                                    <ColumnDefinition>
                                        <ColumnDefinition.Style>
                                            <Style TargetType="ColumnDefinition">
                                                <Setter Property="Width" Value="3*"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Pole}" Value="2">
                                                        <Setter Property="Width" Value="2*"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ColumnDefinition.Style>
                                    </ColumnDefinition>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <TextBox Text="#" IsReadOnly="True"/>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBox Text="BKR" IsReadOnly="True"/>
                                </Grid>
                                <Border BorderBrush="Gray" BorderThickness=".5" Grid.Column="2">
                                    <StackPanel Orientation="Vertical" Grid.Column="2">
                                        <TextBlock Text="M" TextAlignment="Center"/>
                                        <TextBlock Text="I" TextAlignment="Center"/>
                                        <TextBlock Text="S" TextAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="Gray" BorderThickness=".5" Grid.Column="3">
                                    <StackPanel Orientation="Vertical" Grid.Column="2">
                                        <TextBlock Text="R" TextAlignment="Center"/>
                                        <TextBlock Text="E" TextAlignment="Center"/>
                                        <TextBlock Text="C" TextAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                               
                                <Border BorderBrush="Gray" BorderThickness=".5" Grid.Column="4">
                                    <StackPanel Orientation="Vertical" Grid.Column="2">
                                        <TextBlock Text="L" TextAlignment="Center"/>
                                        <TextBlock Text="T" TextAlignment="Center"/>
                                        <TextBlock Text="G" TextAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <Grid Grid.Column="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBox Grid.Row="0" TextAlignment="Center" Text="VOLT AMPS" IsReadOnly="True"></TextBox>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition>
                                                <ColumnDefinition.Style>
                                                    <Style TargetType="ColumnDefinition">
                                                        <Setter Property="Width" Value="*"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Pole}" Value="2">
                                                                <Setter Property="Width" Value="0"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ColumnDefinition.Style>
                                            </ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Text="ɸA" IsReadOnly="True" TextAlignment="Center" Grid.Column="0"/>
                                        <TextBox Text="ɸB" IsReadOnly="True" TextAlignment="Center" Grid.Column="1"/>
                                        <TextBox Text="ɸC" IsReadOnly="True" TextAlignment="Center" Grid.Column="2"/>
                                    </Grid>
                                </Grid>
                                <TextBox Text="DESCRIPTION" IsReadOnly="True" TextAlignment="Center" FontSize="15" Grid.Column="6"/>
                            </Grid>
                        </Grid>
                       
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="7*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="7*"/>
                            </Grid.ColumnDefinitions>
                            <DataGrid x:Name="LeftCircuitGrid" BorderThickness="0" Grid.Column="0" FontFamily="Roboto Mono" HeadersVisibility="None" Margin="0 0 0 0" ItemsSource="{Binding LeftCircuits}" AutoGenerateColumns="False" RowHeight="28" IsReadOnly="True" AlternationCount="{Binding Pole}">
                                <DataGrid.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Toggle Custom Description"/>
                                        <MenuItem Header="Toggle Custom Breaker Size"/>
                                        <MenuItem Header="Place Note">
                                            <ListBox Height="150" HorizontalContentAlignment="Center" Width="100" ItemsSource="{Binding Notes}" SelectionChanged="LeftCircuitGrid_AddNote">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Height="30" Width="30">
                                                            <Ellipse StrokeThickness="1" Stroke="Black"/>
                                                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Text="{Binding Number}"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </MenuItem>
                                        <MenuItem Header="Delete Notes" Click="LeftCircuitGrid_DeleteNotes"/>
                                    </ContextMenu>
                                </DataGrid.ContextMenu>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Width="3*" Binding="{Binding Description}"/>
                                    <DataGridTemplateColumn Width="*" Header="ɸA">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Va}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=(ItemsControl.AlternationIndex)}" Value="0">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Setter Property="Background" Value="LightGray"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Va}" Value="0">
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                    <Setter Property="Background" Value="White"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width="*" Header="ɸB">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Va}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=(ItemsControl.AlternationIndex)}" Value="1">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Setter Property="Background" Value="LightGray"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Va}" Value="0">
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                    <Setter Property="Background" Value="White"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width="*" Header="ɸC" Visibility="{Binding Data, Source={StaticResource PoleBindingProxy}, Converter={StaticResource PoleToVisibilityConverter}}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Va}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=(ItemsControl.AlternationIndex)}" Value="2">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Setter Property="Background" Value="LightGray"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Va}" Value="0">
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                    <Setter Property="Background" Value="White"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width=".4*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock TextAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value=""/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding LoadCategory}" Value="1">
                                                                    <Setter Property="Text" Value="X"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width=".4*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock TextAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value=""/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding LoadCategory}" Value="2">
                                                                    <Setter Property="Text" Value="X"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width=".4*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock TextAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value=""/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding LoadCategory}" Value="3">
                                                                    <Setter Property="Text" Value="X"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width=".5*" Header="BKR">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="{Binding BreakerSize}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding BreakerSize}" Value="0">
                                                                    <Setter Property="Text" Value=""/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding BreakerSize}" Value="2">
                                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding BreakerSize}" Value="3">
                                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width="20">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Number}" Background="LightBlue"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Grid Background="AliceBlue" Grid.Column="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition>
                                            <ColumnDefinition.Style>
                                                <Style TargetType="ColumnDefinition">
                                                    <Setter Property="Width" Value="*"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Pole}" Value="2">
