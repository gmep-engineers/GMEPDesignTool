                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                </Grid>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid VerticalAlignment="Top" Grid.Row="0" Height="{Binding Length, Converter={StaticResource LengthToHeightConverter}}" Width="{Binding RelativeSource={RelativeSource AncestorType=Canvas}, Path=ActualWidth}">
