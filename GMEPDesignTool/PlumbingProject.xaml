<UserControl x:Class="GMEPDesignTool.PlumbingProject"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GMEPDesignTool"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Fixtures}" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*" />
                <DataGridTextColumn Header="Number" Binding="{Binding Number}" Width="*" />
                <DataGridTextColumn Header="Make" Binding="{Binding Make}" Width="*" />
                <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="*" />
                <DataGridTextColumn Header="Trap" Binding="{Binding Trap}" Width="*" />
                <DataGridTextColumn Header="Waste" Binding="{Binding Waste}" Width="*" />
                <DataGridTextColumn Header="Vent" Binding="{Binding Vent}" Width="*" />
                <DataGridTextColumn Header="ColdWater" Binding="{Binding ColdWater}" Width="*" />
                <DataGridTextColumn Header="HotWater" Binding="{Binding HotWater}" Width="*" />
                <DataGridTextColumn Header="FixtureDemand" Binding="{Binding FixtureDemand}" Width="*" />
                <DataGridTextColumn Header="HotDemand" Binding="{Binding HotDemand}" Width="*" />
                <DataGridTextColumn Header="DFU" Binding="{Binding DFU}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</UserControl>