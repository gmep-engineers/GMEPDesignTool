<Window x:Class="GMEPDesignTool.UpdatePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMEPDesignTool"
        mc:Ignorable="d"
        Title="UpdatePasswordWindow" Height="100" Width="360">
    <Grid>
        <Label Content="New Password"></Label>
        <TextBox Text="{Binding Password}" Width="230" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="95 5 0 0 "/>
        <Button Content="Update" Width="100" Height="20"  VerticalAlignment="Bottom"  HorizontalAlignment="Center" Click="UpdatePasswordClick" Margin="0 0 0 7"/>
    </Grid>
</Window>