<Window x:Class="GMEPDesignTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMEPDesignTool"
        xmlns:uc="clr-namespace:GMEPDesignTool"
        mc:Ignorable="d"
        Title="GMEP Design Tool" Height="450" Width="800" WindowState="Maximized"
        Icon="/gmep.ico">
 
    <Grid Margin="0,0,0,-6">

        <Grid Visibility="Hidden">
            <Label Content="Username" HorizontalAlignment="Center" Margin="0,-70,10,0" VerticalAlignment="Center"/>
            <TextBox HorizontalAlignment="Center" Margin="0,-30,10,0" Text="TextBox" Width="200" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
            <Label Content="Password" HorizontalAlignment="Center" Margin="0,20,10,0" VerticalAlignment="Center"/>
            <PasswordBox HorizontalAlignment="Center" Margin="0,60,10,0" Width="200" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
            <Button Content=" Sign On " HorizontalAlignment="Center" Margin="-5,110,0,0" VerticalAlignment="Center"/>
        </Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Visibility="Visible">
                <MenuItem Header="_Project">
                    <MenuItem Header="_Export"/>
                    <MenuItem Header="_Open"/>
                    <MenuItem Header="_Close"/>
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="_Cut"/>
                    <MenuItem Header="_Copy"/>
                    <MenuItem Header="_Paste"/>
                </MenuItem>
                <MenuItem Header="_Admin" Visibility="{Binding AdminMenuVisible}">
                    <MenuItem Header="_Users" Command="{Binding OpenEmployeesWindowCommand}"/>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="_About"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Grid Visibility="Visible" Margin="0,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="355" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="SlateGray" Margin="0,21,10,0" Grid.ColumnSpan="2">

                <TextBox HorizontalAlignment="Stretch" Padding="3" Margin="10,10,10,0" Text="{Binding Path=SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="25" VerticalAlignment="Top" Grid.ColumnSpan="2" />
                <ListView x:Name="ProjectList" Margin="10,44,10,180" Grid.ColumnSpan="2" ItemsSource="{Binding SearchResultKeys}">
                    
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <EventSetter Event="MouseDoubleClick" Handler="MainWindowOpenProject"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                <Button Width="75" Height="23" Content="Search" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="11,11,11,0" Command="{Binding GetSearchResultsCommand}"/>


                <Rectangle HorizontalAlignment="Stretch" Height="65" Margin="10,0,10,15" Stroke="White" VerticalAlignment="Bottom"/>
                <Image HorizontalAlignment="Left" Height="55" Margin="15,0,15,20" VerticalAlignment="Bottom" Width="60" RenderTransformOrigin="0.518,0.74" Source="/GMEPE-LogoTransparent.png" Stretch="Fill" Cursor="Hand" />
                <Label Content="{Binding Path=Name}" HorizontalAlignment="Left" Margin="80,0,10,52" VerticalAlignment="Bottom" RenderTransformOrigin="0.528,0.565" Foreground="White"/>
                <Label Content="{Binding Path=EmailAddress}" HorizontalAlignment="Left" Margin="80,0,10,36" VerticalAlignment="Bottom" RenderTransformOrigin="0.528,0.565" Foreground="White"/>
                <Label Content="{Binding Path=PhoneNumber, TargetNullValue={}}" ContentStringFormat="{}{0:(###) ###-####}"  HorizontalAlignment="Left" Margin="80,0,10,19" VerticalAlignment="Bottom" RenderTransformOrigin="0.528,0.565" Foreground="White"/>
                <Label Content="{Binding Path=ExtensionLabel, TargetNullValue={}}"  HorizontalAlignment="Left" Margin="168,0,10,19" VerticalAlignment="Bottom" RenderTransformOrigin="0.528,0.565" Foreground="White"/>
                <Label Content="{Binding Path=Extension, TargetNullValue={}}"  HorizontalAlignment="Left" Margin="190,0,10,19" VerticalAlignment="Bottom" RenderTransformOrigin="0.528,0.565" Foreground="White"/>


            </Grid>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Margin="0,21,0,0" />

            <Grid Grid.Column="2" Margin="0,21,0,0">
                <TabControl x:Name="ProjectTabs" ItemsSource="{Binding Tabs}">
                    <TabControl.ItemContainerStyle>
                        <Style TargetType="TabItem">
                            <Setter Property="HeaderTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Path=Header, RelativeSource={RelativeSource AncestorType={x:Type TabItem}}}" Grid.Column="0"/>
                                            <TextBlock Text="  " Grid.Column="1"/>

                                            <TextBlock x:Name="CloseButton" Grid.Column="2" MouseUp="MainWindowCloseProject" >
                                                ❎
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="Gray" />
                                                        <Style.Triggers>
                                                            <Trigger Property ="IsMouseOver" Value="True">
                                                                <Setter Property= "Foreground" Value="Crimson"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.ItemContainerStyle>
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Header}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
  
                </TabControl>
            </Grid>
        </Grid>
    </Grid>
</Window>
