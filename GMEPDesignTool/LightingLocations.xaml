<Window x:Class="GMEPDesignTool.LightingLocations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMEPDesignTool"
        mc:Ignorable="d"
        Title="LightingLocations" Height="450" Width="800">
    <Window.Resources>
        <local:IdToLocationDescriptionConverter x:Key="IdToLocationDescriptionConverter" />
    </Window.Resources>
    <Grid Background="SlateGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid Name="LocationGrid" Grid.Row="0" ItemsSource="{Binding Locations}" AutoGenerateColumns="False" CanUserAddRows="True" SelectedItem="{Binding SelectedLocation, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Width="5*" Header="Location" Binding="{Binding LocationDescription}"/>
                <DataGridCheckBoxColumn Width="*" Header="Outside" Binding="{Binding IsOutside}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox Grid.Row="1" Text="{Binding Lighting.Id, Converter={StaticResource IdToLocationDescriptionConverter}, Mode=TwoWay}" Width="200" Height="30" IsReadOnly="True" />
                <Button Grid.Row="0" Width="100" Height="30" Content="Assign" FontWeight="Bold" Click="Assign_Click"/>
            </StackPanel>
        </Grid>
       
    </Grid>
</Window>
